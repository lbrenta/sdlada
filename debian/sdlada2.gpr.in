library project SDLAda2 is
    
   for Library_Name     use "sdlada2";
   for Library_Dir      use "/usr/lib/${DEB_HOST_MULTIARCH}";
   for Library_Kind     use "dynamic";
   for Source_Dirs      use ("/usr/share/ada/adainclude/sdlada2");
   for Library_ALI_Dir  use "/usr/lib/${DEB_HOST_MULTIARCH}/ada/adalib/sdlada2";
   for Externally_Built use "true";

end SDLAda2;
